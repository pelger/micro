pipeline {
  agent any 

  stages {
    stage('Checkout') {
      steps { 
        checkout scm
      }
    }
    stage('Build') { 
      steps { 
        sh 'source ~/.bashrc && npm install'
      }
    }
    stage('Test'){
      steps {
        sh 'source ~/.bashrc && npm test'
      }
    }
  }
}

